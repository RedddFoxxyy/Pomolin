<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
	<id>io.github.redddfoxxyy.pomolin</id>

	<name>Pomolin</name>
	<summary>Focus on what matters</summary>
	<metadata_license>CC0-1.0</metadata_license>
	<project_license>AGPL-3.0-only</project_license>
	<developer_name>Suyog Tandel</developer_name>

	<description>
		<p>
			A simple, beautiful, and minimalist Pomodoro timer for your desktop. Designed to help
			you stay focused and productive, it provides an elegant and straightforward way to manage your work and break
			intervals.
		</p>
	</description>

	<launchable type="desktop-id">io.github.redddfoxxyy.pomolin.desktop</launchable>

	<requires>
		<control>keyboard</control>
		<control>pointing</control>
		<display_length compare="ge">768</display_length>
	</requires>

	<keywords>
		<keyword>Productivity</keyword>
		<keyword>Pomodoro</keyword>
		<keyword>Timer</keyword>
		<keyword>Time</keyword>
		<keyword>Tracker</keyword>
	</keywords>

	<branding>
		<color scheme_preference="light" type="primary">#b8bee3</color>
		<color scheme_preference="dark" type="primary">#282245</color>
	</branding>

